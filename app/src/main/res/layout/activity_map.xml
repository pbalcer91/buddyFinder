<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_map">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity"
        tools:ignore="FragmentTagUsage" />

    <RelativeLayout
        android:id="@+id/map_title_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:background="@color/background_30">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:clickable="true"
            android:padding="@dimen/padding"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/component_image_button">

            <ImageView
                android:id="@+id/btn_map_back"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:src="@drawable/ic_arrow_left_primary"
                android:focusable="true"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_map_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/text"
            android:textSize="@dimen/text_header"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/component_image_button"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding">

            <ImageView
                android:id="@+id/btn_accept_location"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:focusable="true"
                android:src="@drawable/ic_check_primary"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_map_search_field"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_field_height"
        android:layout_below="@+id/map_title_row"
        android:layout_marginHorizontal="@dimen/padding"
        android:layout_marginTop="@dimen/padding"
        android:background="@drawable/component_edit_text"
        android:paddingHorizontal="@dimen/padding"
        android:paddingVertical="@dimen/padding">

        <EditText
            android:id="@+id/et_search_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/padding"
            android:layout_toLeftOf="@+id/search_icon"
            android:background="@null"
            android:hint="@string/search"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textColor="@color/text"
            android:textColorHint="@color/text_hint"
            android:textSize="@dimen/text_regular"
            android:importantForAutofill="no" />

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="@dimen/padding"
            android:src="@drawable/ic_search_primary"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/current_location_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btn_map_search_field"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginRight="@dimen/padding"
        android:background="@drawable/component_edit_text"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding">

        <ImageView
            android:id="@+id/btn_current_location"
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:focusable="true"
            android:src="@drawable/ic_current_location_primary"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/current_location_wrapper"
        android:layout_marginTop="@dimen/padding"
        android:layout_marginRight="@dimen/padding"
        android:background="@drawable/component_edit_text"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding">

        <ImageView
            android:id="@+id/btn_event_location"
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:focusable="true"
            android:src="@drawable/ic_location_primary"
            tools:ignore="ContentDescription" />

    </LinearLayout>
</RelativeLayout>