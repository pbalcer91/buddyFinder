<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:paddingHorizontal="@dimen/margin"
    android:paddingVertical="@dimen/padding">

    <RelativeLayout
        android:id="@+id/event_details_title_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:clickable="true"
            android:padding="@dimen/padding"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/component_image_button">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/ic_arrow_left_primary"
                android:focusable="true" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event tittle"
            android:textColor="@color/text"
            android:textSize="@dimen/text_header"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/component_image_button"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding">

            <ImageView
                android:id="@+id/btn_event_edit"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:focusable="true"
                android:src="@drawable/ic_edit_primary" />

        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/event_details_title_row"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/component_label"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginTop="@dimen/padding"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:focusable="true"
                        android:src="@drawable/ic_calendar"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/padding"/>

                    <TextView
                        android:id="@+id/tv_event_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="12/12/2012"
                        android:textColor="@color/text"
                        android:textSize="14sp"
                        android:gravity="center_vertical"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:focusable="true"
                        android:src="@drawable/ic_time"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/padding"/>

                    <TextView
                        android:id="@+id/tv_event_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="18:00"
                        android:textColor="@color/text"
                        android:textSize="14sp"
                        android:gravity="center_vertical"/>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_event_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin"
                android:background="@drawable/component_label_button"
                android:clickable="true"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:focusable="true"
                        android:src="@drawable/ic_location_primary"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/padding"/>

                    <TextView
                        android:id="@+id/tv_event_location"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Lodz, Dabrowskiego 48"
                        android:textColor="@color/primary"
                        android:textSize="14sp"
                        android:gravity="center_vertical"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:focusable="true"
                    android:src="@drawable/ic_arrow_right_primary" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/component_label"
                android:layout_marginBottom="@dimen/margin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="There will be event's description, where author can put some details about this event."
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_regular"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/btn_event_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin"
                android:background="@drawable/component_label_button"
                android:clickable="true"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:focusable="true"
                        android:src="@drawable/ic_members_primary"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/padding"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Members"
                        android:textAllCaps="true"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:gravity="center_vertical"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:focusable="true"
                    android:src="@drawable/ic_arrow_right_primary" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organizer: "
                    android:textStyle="bold"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_regular"/>

                <TextView
                    android:id="@+id/tv_event_details_organizer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_regular"/>
            </LinearLayout>\

            <Button
                android:id="@+id/btn_event_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/component_regular_button"
                android:text="Join"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin"/>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin">

        <Button
            android:id="@+id/btn_event_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin"
            android:background="@drawable/component_flat_button"
            android:text="Delete"
            android:textColor="@color/error" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginRight="@dimen/padding"
                android:src="@drawable/ic_chat_primary"
                app:background="@color/primary"
                app:tint="@color/background"
                />

        </LinearLayout>



    </RelativeLayout>
</LinearLayout>