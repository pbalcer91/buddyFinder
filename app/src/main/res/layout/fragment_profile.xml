<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ProfileFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/profile_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_margin="@dimen/margin"
            android:src="@drawable/ic_person"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/margin">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/padding"/>

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="userName@email.com"
                android:textSize="16sp"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dark_gray"
        android:layout_marginHorizontal="@dimen/margin"/>

    <LinearLayout
        android:id="@+id/profile_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin">

        <Button
            android:id="@+id/btn_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/component_flat_button"
            android:text="@string/change_name_title"
            android:textColor="@color/primary"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/padding"/>

        <Button
            android:id="@+id/btn_edit_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/component_flat_button"
            android:text="@string/change_email_title"
            android:textColor="@color/primary"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/padding"/>

        <Button
            android:id="@+id/btn_edit_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/component_flat_button"
            android:text="@string/change_password_title"
            android:textColor="@color/primary"
            android:layout_gravity="center" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dark_gray"
        android:layout_marginHorizontal="@dimen/margin"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin"
            android:background="@drawable/component_flat_button"
            android:text="@string/logout"
            android:textColor="@color/dark_gray" />

    </RelativeLayout>



</LinearLayout>