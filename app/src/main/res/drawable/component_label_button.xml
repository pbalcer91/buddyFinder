<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
            <corners
                android:topLeftRadius="40dp"
                android:topRightRadius="40dp"
                android:bottomLeftRadius="40dp"
                android:bottomRightRadius="40dp"/>
            <stroke android:color="@color/primary_30" android:width="2dp" />
            <padding
                android:top="@dimen/padding"
                android:bottom="@dimen/padding"
                android:left="@dimen/margin"
                android:right="@dimen/margin" />
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <solid android:color="@color/background_70" />
            <corners
                android:topLeftRadius="40dp"
                android:topRightRadius="40dp"
                android:bottomLeftRadius="40dp"
                android:bottomRightRadius="40dp"/>
            <stroke android:color="@color/primary" android:width="1dp" />
            <padding
                android:top="@dimen/padding"
                android:bottom="@dimen/padding"
                android:left="@dimen/margin"
                android:right="@dimen/margin" />
        </shape>
    </item>

</selector>
